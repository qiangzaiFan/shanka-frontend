/* pages/register/register.wxss */
@import "../login/login.wxss";

.register-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #764ba2 0%, #667eea 100%);
  position: relative;
  overflow: hidden;
}

.header-section .title {
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.header-section .subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 300;
}

.register-btn-wrapper {
  margin-bottom: 40rpx;
}

.register-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #764ba2 0%, #667eea 100%);
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 24rpx rgba(118, 75, 162, 0.3);
  transition: all 0.3s ease;
}

.register-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(118, 75, 162, 0.3);
}

.login-section {
  text-align: center;
  padding-top: 20rpx;
}

.login-text {
  font-size: 28rpx;
  color: #999;
}

.login-link {
  font-size: 28rpx;
  color: #667eea;
  margin-left: 8rpx;
  font-weight: bold;
}
/* pages/study/study.wxss */
.study-container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 头部区域 */
.header-section {
  background: linear-gradient(135deg, #07C160 0%, #38d9a9 100%);
  padding: 80rpx 40rpx 60rpx;
  text-align: center;
  color: #fff;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 学习进度区域 */
.progress-section {
  padding: 40rpx;
}

.progress-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.progress-info {
  flex: 1;
}

.progress-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.progress-desc {
  font-size: 24rpx;
  color: #999;
}

.progress-circle {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: conic-gradient(#07C160 0deg 216deg, #f0f0f0 216deg 360deg);
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.progress-circle::before {
  content: '';
  width: 80rpx;
  height: 80rpx;
  background: #fff;
  border-radius: 50%;
  position: absolute;
}

.progress-text {
  font-size: 24rpx;
  font-weight: bold;
  color: #07C160;
  z-index: 1;
}

/* 学习卡片区域 */
.cards-section {
  padding: 0 40rpx 40rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

.cards-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.study-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.study-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.card-count {
  font-size: 24rpx;
  color: #999;
}

.card-progress {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.progress-bar {
  flex: 1;
  height: 8rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
  margin-right: 16rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: #07C160;
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.card-progress .progress-text {
  font-size: 24rpx;
  color: #07C160;
  font-weight: bold;
}

.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.last-study {
  font-size: 24rpx;
  color: #999;
}

.study-btn {
  background: #07C160;
  color: #fff;
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

/* 学习统计区域 */
.stats-section {
  padding: 0 40rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
}

.stat-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx 24rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.stat-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #07C160;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}
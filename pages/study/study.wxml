<!--pages/study/study.wxml-->
<view class="study-container">
  <!-- 头部区域 -->
  <view class="header-section">
    <view class="title">学习卡</view>
    <view class="subtitle">开始您的学习之旅</view>
  </view>

  <!-- 学习进度 -->
  <view class="progress-section">
    <view class="progress-card">
      <view class="progress-info">
        <view class="progress-title">今日学习进度</view>
        <view class="progress-desc">已完成 {{todayProgress}}%</view>
      </view>
      <view class="progress-circle">
        <view class="progress-text">{{todayProgress}}%</view>
      </view>
    </view>
  </view>

  <!-- 学习卡片列表 -->
  <view class="cards-section">
    <view class="section-title">学习卡片</view>
    <view class="cards-list">
      <view class="study-card" wx:for="{{studyCards}}" wx:key="id" bindtap="startStudy" data-id="{{item.id}}">
        <view class="card-header">
          <view class="card-title">{{item.title}}</view>
          <view class="card-count">{{item.cardCount}}张卡片</view>
        </view>
        <view class="card-progress">
          <view class="progress-bar">
            <view class="progress-fill" style="width: {{item.progress}}%"></view>
          </view>
          <view class="progress-text">{{item.progress}}%</view>
        </view>
        <view class="card-footer">
          <view class="last-study">上次学习：{{item.lastStudy}}</view>
          <view class="study-btn">开始学习</view>
        </view>
      </view>
    </view>
  </view>

  <!-- 学习统计 -->
  <view class="stats-section">
    <view class="section-title">学习统计</view>
    <view class="stats-grid">
      <view class="stat-item">
        <view class="stat-number">{{stats.totalCards}}</view>
        <view class="stat-label">总卡片数</view>
      </view>
      <view class="stat-item">
        <view class="stat-number">{{stats.studiedCards}}</view>
        <view class="stat-label">已学习</view>
      </view>
      <view class="stat-item">
        <view class="stat-number">{{stats.studyDays}}</view>
        <view class="stat-label">学习天数</view>
      </view>
      <view class="stat-item">
        <view class="stat-number">{{stats.studyTime}}</view>
        <view class="stat-label">学习时长(分钟)</view>
      </view>
    </view>
  </view>
</view>
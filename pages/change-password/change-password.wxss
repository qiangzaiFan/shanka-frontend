/* pages/change-password/change-password.wxss */
.change-password-container {
  min-height: 100vh;
  background: #f7f7f7;
  padding-bottom: 160rpx;
}

/* 提示区域 */
.tip-section {
  background: #f7f7f7;
  padding: 40rpx 32rpx 32rpx;
}

.tip-text {
  font-size: 28rpx;
  color: #999;
  font-weight: 400;
}

/* 表单区域 */
.form-section {
  background: #f7f7f7;
  padding: 0;
}

/* 输入框组容器 */
.input-container {
  width: 100%;
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 32rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
}

/* 输入框组 */
.input-group {
  background: #fff;
  padding: 32rpx 24rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx dashed #e0e0e0;
}

.input-group:last-child {
  border-bottom: none;
}

.input-label {
  font-size: 30rpx;
  color: #333;
  font-weight: 400;
  width: 160rpx;
  flex-shrink: 0;
}

.input-field {
  flex: 1;
  height: 44rpx;
  background: transparent;
  border: none;
  padding: 0 0 0 40rpx;
  font-size: 30rpx;
  color: #333;
  box-sizing: border-box;
  text-align: left;
}

.input-field:focus {
  background: transparent;
}

.input-field::placeholder {
  color: #ccc;
  font-size: 30rpx;
}

/* 密码提示 */
.password-tip {
  background: #f7f7f7;
  padding: 0 32rpx;
  margin-bottom: 60rpx;
}

.password-tip .tip-text {
  font-size: 24rpx;
  color: #999;
  line-height: 1.5;
}

/* 提交按钮 */
.submit-btn-wrapper {
  position: fixed;
  bottom: 15rpx;
  left: 10rpx;
  right: 10rpx;
}

.submit-btn {
  width: 100%;
  height: 80rpx;
  background: #07C160;
  color: #fff;
  border: none;
  border-radius: 40rpx;
  font-size: 30rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn::after {
  border: none;
}

.submit-btn:disabled {
  background: #ccc;
  color: #999;
}

.submit-btn:active {
  transform: translateY(2rpx);
}
/* pages/change-password/change-password.wxss */
.change-password-container {
  min-height: 100vh;
  background: #f5f5f5;
}

/* 头部区域 */
.header-section {
  background: #fff;
  padding: 40rpx;
  text-align: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 提示区域 */
.tip-section {
  background: #f8f9fa;
  padding: 32rpx 40rpx;
  margin-bottom: 20rpx;
}

.tip-text {
  font-size: 28rpx;
  color: #666;
}

/* 表单区域 */
.form-section {
  background: #fff;
  padding: 40rpx;
}

/* 输入框组 */
.input-group {
  margin-bottom: 40rpx;
}

.input-label {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.input-field {
  width: 100%;
  height: 96rpx;
  background: #f8f9fa;
  border: 1rpx solid #e9ecef;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 32rpx;
  color: #333;
  box-sizing: border-box;
}

.input-field:focus {
  border-color: #07C160;
  background: #fff;
}

.input-field::placeholder {
  color: #999;
  font-size: 30rpx;
}

/* 密码提示 */
.password-tip {
  background: #f8f9fa;
  padding: 24rpx;
  border-radius: 8rpx;
  margin-bottom: 60rpx;
}

.password-tip .tip-text {
  font-size: 24rpx;
  color: #999;
  line-height: 1.5;
}

/* 提交按钮 */
.submit-btn-wrapper {
  margin-top: 40rpx;
}

.submit-btn {
  width: 100%;
  height: 96rpx;
  background: #07C160;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: normal;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn::after {
  border: none;
}

.submit-btn:disabled {
  background: #ccc;
  color: #999;
}
/* pages/profile/profile.wxss */
.profile-container {
  min-height: 100vh;
  background: #f5f5f5;
}

/* 用户信息区域 */
.user-section {
  background: #fff;
  padding: 40rpx;
  margin-bottom: 20rpx;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  margin-right: 24rpx;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 60rpx;
  background: #f0f0f0;
}

.user-details {
  flex: 1;
}

.username {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.user-meta {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.user-id,
.user-expire {
  font-size: 24rpx;
  color: #999;
}

.arrow-icon {
  padding: 8rpx;
}

/* 功能菜单 */
.menu-section {
  background: #fff;
  margin-bottom: 40rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-content {
  display: flex;
  align-items: center;
  flex: 1;
}

.menu-icon {
  margin-right: 24rpx;
  display: flex;
  align-items: center;
}

.menu-text {
  font-size: 32rpx;
  color: #333;
}

/* 退出登录 */
.logout-section {
  padding: 0 40rpx;
}

.logout-btn {
  width: 100%;
  height: 96rpx;
  background: #fff;
  color: #ff4757;
  border: none;
  border-radius: 8rpx;
  font-size: 32rpx;
  line-height: 96rpx;
}

.logout-btn::after {
  border: none;
}
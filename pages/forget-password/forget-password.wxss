/* pages/forget-password/forget-password.wxss */
@import "../login/login.wxss";

.forget-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  position: relative;
  overflow: hidden;
}

.header-section .title {
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.header-section .subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 300;
}

.btn-wrapper {
  margin-bottom: 40rpx;
}

.primary-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 24rpx rgba(240, 147, 251, 0.3);
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  border: none;
}

.primary-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(240, 147, 251, 0.3);
}

.back-section {
  text-align: center;
  padding-top: 20rpx;
}

.back-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  padding: 16rpx;
  border-radius: 8rpx;
  transition: all 0.3s ease;
}

.back-text:active {
  background: rgba(255, 255, 255, 0.1);
}